<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_gravity="center">
    <EditText
        android:id="@+id/txt_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên"
        android:padding="15dp"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark1"/>
    <EditText
        android:id="@+id/txt_edit_phone"
        android:layout_below="@id/txt_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:padding="15dp"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark1"/>
    <EditText
        android:layout_below="@id/txt_edit_phone"
        android:id="@+id/txt_edit_studentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã sinh viên"
        android:padding="15dp"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark1"/>
    <Button
        android:id="@+id/btn_update_profile"
        android:layout_below="@id/txt_edit_studentid"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_primary"
        android:text="Cập nhật"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
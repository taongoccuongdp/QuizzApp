<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ranking_item_id"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:textAlignment="center"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
android:layout_marginBottom="5dp"
android:layout_marginTop="2dp"
android:background="@drawable/bg_list_subject_item"
android:padding="5dp"
    >
<LinearLayout
    android:padding="5dp"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/txt_subject_name"
        android:textColor="@color/colorPrimary1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên môn học"
        android:textSize="14sp" />
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/txt_score"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm số"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/txt_numOfTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:text="Số lần kiểm tra:"/>
</LinearLayout>

</LinearLayout>